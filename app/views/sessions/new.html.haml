%p
  Don't have an account? #{link_to "Sign up!", signup_path}
= bootstrap_form_tag sessions_path do
  .form-group
    = label_tag :login, "Username or Email Address"
    = text_field_tag :login, params[:login]
  .form-group
    = label_tag :password
    %br/
    = password_field_tag :password
  %p= submit_tag "Log in"
